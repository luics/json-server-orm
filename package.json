    "json-server": "^0.16.3",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.2",
    "typescript-json-schema": "^0.50.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luics/json-server-orm.git"
  },
