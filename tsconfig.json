{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    // Check
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
  ]
}