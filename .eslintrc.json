{
  "env": { "browser": true, "mocha": true, "es2021": true },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "node": { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    }
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "max-len": ["error", 120],
    "no-param-reassign": "off",
    "import/extensions": "off"
  }
}
