{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Comment": {
            "additionalProperties": false,
            "properties": {
                "body": {
                    "maxLength": 140,
                    "minLength": 5,
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "post": {
                    "$ref": "#/definitions/Post"
                },
                "postId": {
                    "type": "integer"
                }
            },
            "propertyOrder": [
                "body",
                "postId",
                "post",
                "id"
            ],
            "required": [
                "body",
                "id",
                "postId"
            ],
            "type": "object"
        },
        "Post": {
            "additionalProperties": false,
            "properties": {
                "comments": {
                    "items": {
                        "$ref": "#/definitions/Comment"
                    },
                    "type": "array"
                },
                "id": {
                    "type": "integer"
                },
                "title": {
                    "maxLength": 50,
                    "minLength": 5,
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/User"
                },
                "userId": {
                    "type": "integer"
                }
            },
            "propertyOrder": [
                "title",
                "userId",
                "user",
                "comments",
                "id"
            ],
            "required": [
                "id",
                "title",
                "userId"
            ],
            "type": "object"
        },
        "Profile": {
            "additionalProperties": true,
            "properties": {
                "desc": {
                    "type": "string"
                },
                "name": {
                    "maxLength": 20,
                    "minLength": 5,
                    "type": "string"
                }
            },
            "propertyOrder": [
                "name",
                "desc"
            ],
            "required": [
                "name"
            ],
            "type": "object"
        },
        "User": {
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "maxLength": 20,
                    "minLength": 1,
                    "type": "string"
                },
                "posts": {
                    "items": {
                        "$ref": "#/definitions/Post"
                    },
                    "type": "array"
                },
                "token": {
                    "type": "string"
                }
            },
            "propertyOrder": [
                "name",
                "token",
                "posts",
                "id"
            ],
            "required": [
                "id",
                "name",
                "token"
            ],
            "type": "object"
        }
    }
}

